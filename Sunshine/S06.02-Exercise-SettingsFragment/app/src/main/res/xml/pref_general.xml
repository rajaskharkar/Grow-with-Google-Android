<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:defaultValue="@string/address_edittext_pref"
        android:inputType="text"
        android:key="@string/location_key"
        android:singleLine="true"
        app:title="@string/location_label"/>

    <ListPreference
        android:defaultValue="@string/metric"
        android:entries="@array/pref_units_options"
        android:entryValues="@array/pref_units_values"
        android:key="@string/units_key"
        android:title="@string/units_label"/>
</PreferenceScreen>